@model Thing

<p>
    Creating a new Thing is an artifical long-running command for demo. It 
    will take in excess of 10 seconds before the new Thing will be returned in
    on the List page.
</p>

@{
    ViewData["Title"] = "Create Thing";
}

<h2>Create a new Thing</h2>

<form asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" required />
    </div>
    
    <div>
        <button type="submit">Create</button>
    </div>
</form>
